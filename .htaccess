# Redirect untuk halaman lain (contoh: rumah-70-75)
RewriteRule ^rumah-70-75$ /natureland-kiano-2/rumah-70-75.html [NC,L]

# Redirect untuk halaman natureland-kiano-3
RewriteRule ^natureland-kiano-3/([a-zA-Z0-9\-]+)$ /natureland-kiano-3/$1.html [L]

# Redirect untuk halaman lain (contoh: rumah-1-5-lantai-40-60)
RewriteRule ^rumah-40-60$ /natureland-kiano-3/rumah-1-5-lantai-40-60.html [NC,L]

